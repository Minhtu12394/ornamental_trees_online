$(function(){
  $('#new_comment input[type="submit"]').on('click', function(e){
    e.preventDefault();
    var comment_content = $('#comment_content').val();
    var product_id = $('#comment_product_id').val();
    params = {"comments": {"content": comment_content, "product_id": product_id}}
    $.ajax({
      method: 'POST',
      url: '/products/' + product_id + '/comments',
      type: 'JSON',
      data: params
    }).success(function(data){
      $('.header-comment').prepend(data.content);
      $('#comment_content').val("");
    }).error(function(){

    });
  });
});
