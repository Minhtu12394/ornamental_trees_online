<div class="row">
  <div class="col s12 l4">
    <div class="card z-depth-4">
      <div class="card-image">
        <%= image_tag @product.image %>
      </div>
      <div class="title-course-banner">
        <%= @product.name %>
      </div>
      <div class="center container-price">
        <div class="price-text-course">
          <span id="price-current-product">
            <%= t ".price" %><%= @product.price %>
          </span>
        </div>
      </div>

      <div class="card-action center">
        <div class="container-payment-button">
          <%= form_for @product do |f| %>
            <%= f.submit (t".buy") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col s12 l8">
    <%= t ".category" %><%= @product.category.name %>
    <br>
    <%= t ".description" %>
  </div>
</div>

<% if logged_in? %>
  <div class="row">
    <div class="input-field col s6" id="">
     <%= render "comments/form" %>
    </div>
  </div>
<% end %>
<%= "All comments" %>
<div class="col s12 m8 offset-m2 l6 offset-l3 header-comment">
  <%= render partial: "comments/comment", collection: @comments %>
  <%= will_paginate @comments %>
</div>



